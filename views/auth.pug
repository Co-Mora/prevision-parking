extends layout

block content
  div.gray-bg(style="height: 1200px")
    div.middle-box.text-center.loginscreen.animated.fadeInDown
      div
        div
          img(class="-square-full", alt="image", width="100", src="/images/icon.png")
          h1.logo-name
          h2(style="color:#57606f; font-size:45px; font-weight: 400") PARKING 101
          p(style="font-weight:600") Welcome to Parking 101
          form(action=`/login/auth` method="POST")
            div.form-group
              input.form-control(type="email" name="email"  placeholder="Email Address" required="")
            div.form-group
              input.form-control(type="password" name="password"  placeholder="Password" required="")  
            button.btn.btn-primary.block.full-width.m-b(type="submit") Login
            a(href="#") 
              p.text-muted.text-center=error
              small Forgot password?
              //- p.text-muted.text-center 
              //-   small Do not have an account?
              
              //- a.btn.btn-sm.btn-white.btn-block(href="/register/me") Register
          p.m-t
            small Copyright PARKAIDE &copy; 2018
