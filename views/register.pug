extends layout

block content
  div.gray-bg(style="height: 1200px")
    div.middle-box.text-center.loginscreen.animated.fadeInDown
      div
        div
          img(class="-square-full", alt="image", width="100", src="/images/icon.png")
          h1.logo-name
          h2 Park Aide
          p Welcome to Car Park Aide.
          form(action=`/register/auth` method="POST")
            div.form-group
              input.form-control(type="name" name="name"  placeholder="Name" required="")
            div.form-group
              input.form-control(type="email" name="email"  placeholder="Email Address" required="")
            div.form-group
              input.form-control(type="password" name="password"  placeholder="Password" required="")
            button.btn.btn-primary.block.full-width.m-b(type="submit") Register
            p.text-muted.text-center=error
            a(href="#") 
              small Forgot password?
              p.text-muted.text-center 
                small Already have an account?
              a.btn.btn-sm.btn-white.btn-block(href="/login") Login
          p.m-t
            small Car Park Aide web app &copy; 2018
